<odoo>
    <record id="view_company_form_bg_custom" model="ir.ui.view">
        <field name="name">res.company.bg.custom</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="bg_image" widget="image" class="float-left oe_avatar"/>
            </xpath>
        </field>
    </record>
</odoo>